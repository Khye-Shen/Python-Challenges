import random
ending_Character = random.randrange(1,1000)
password = input("Would you like a random password generated?")
if password == ("Yes" or "yes"):
    centred_around = input("What would like you password to be centred around? Type a word which will be formed into your password")
    l = list(centred_around)
    random.shuffle(l)
    comp=""
    for i in l:
        comp+=i
    result = comp + str(ending_Character)
    print("Your password is:")
    print(result)
